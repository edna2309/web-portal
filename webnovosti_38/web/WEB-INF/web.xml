<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registracija</servlet-name>
        <servlet-class>servlet.Registracija</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dodaj</servlet-name>
        <servlet-class>servlet.Dodaj</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Izmjena</servlet-name>
        <servlet-class>servlet.Izmjena</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObrisiNovost</servlet-name>
        <servlet-class>servlet.ObrisiNovost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DodajNovost</servlet-name>
        <servlet-class>servlet.DodajNovost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IzmijeniNovost</servlet-name>
        <servlet-class>servlet.IzmijeniNovost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DodajKomentar</servlet-name>
        <servlet-class>servlet.DodajKomentar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registracija</servlet-name>
        <url-pattern>/Registracija</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dodaj</servlet-name>
        <url-pattern>/Dodaj</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Izmjena</servlet-name>
        <url-pattern>/Izmjena</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObrisiNovost</servlet-name>
        <url-pattern>/ObrisiNovost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DodajNovost</servlet-name>
        <url-pattern>/DodajNovost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IzmijeniNovost</servlet-name>
        <url-pattern>/IzmijeniNovost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DodajKomentar</servlet-name>
        <url-pattern>/DodajKomentar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
